<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="UTF-8">
  <title> Prediction History </title>
  <link rel="stylesheet" href="/../Public/css/dashboardStyle.css">
  <link rel="stylesheet" href="/../Public/css/cards.css">
  <link rel="stylesheet" href="/../Public/css/predictHistStyle.css">
  <!-- Boxiocns CDN Link -->
  <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet' crossorigin="anonymous">
</head>

<body>
  <div class="sidebar close_1">
    <div class="logo-details">
      <i class='bx bxl-bitcoin'></i>
      <span class="logo_name">Crypto</span>
    </div>
    <ul class="nav-links">
      <li>
        <a href="/">
          <i class='bx bxs-dashboard'></i>
          <span class="link_name">Dashboard</span>
        </a>
        <ul class="sub-menu blank">
          <li><a class="link_name" href="/">Dashboard</a></li>
        </ul>
      </li>

      <li>
        <a href="/history">
          <i class='bx bx-history'></i>
          <span class="link_name">Prediction History</span>
        </a>
        <ul class="sub-menu blank">
          <li><a class="link_name" href="/history">Prediction History</a></li>
        </ul>
      </li>

      <li>
        <a href="/logout">
          <i class='bx bx-log-out'></i>
          <span class="link_name">Log Out</span>
        </a>
        <ul class="sub-menu blank">
          <li><a class="link_name" href="#">Log Out</a></li>
        </ul>
      </li>


      <li>
        <div class="profile-details">
          <div class="profile-content">
          </div>
          <div class="name-job">
            <div class="profile_name">

            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <section class="home-section">
    <div class="home-content">
      <i class='bx bx-menu'></i>
    </div>

    <div id="predictionSection" class="predictionSection">
      <h3 style="text-align: center;padding-top: 60px;">Prediction History</h3>
    </div>

    <ul class="historyContainer">
      <% for ( const prediction of history) { %>
      <li>
        <div class="history">
          <p><%= "Coin:       " + prediction.coin %></p>
          <p><%= "Prediction: " + prediction.predictedPrice %></p>
          <% if (prediction.highestPrice) { %>
          <p><%= "Actual Price: " + prediction.highestPrice %></p>
          <% } else { %>
          <p>Actual Price: N/A</p>
          <% } %>

          <p><%= "Prediction For Date: " + prediction.predictionDate %></p>
        </div>
      </li>
      <% } %>
    </ul>

  </section>

  <script src="../Public/sidebar.js" defer></script>

</body>

</html>